{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["api/**/*.ts", "src/types/**/*.ts", "src/utils/**/*.ts", "src/domain/**/*.ts"],
  "exclude": ["src/lib/**/*.ts", "src/_archive/**/*.ts", "src/utils/egyptianInference.ts"]
}
